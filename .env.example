# ============================================================
# QIA — Quality Intelligence Agent — Environment Variables
# ============================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ------------------------------------------------------------
# OPENAI
# ------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o

# ------------------------------------------------------------
# JIRA
# ------------------------------------------------------------
JIRA_BASE_URL=https://your-org.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=QIA
JIRA_DONE_STATUS=Done
JIRA_IN_PROGRESS_STATUS=In Progress
JIRA_AC_FIELD=customfield_10014

# ------------------------------------------------------------
# GITHUB
# ------------------------------------------------------------
GITHUB_TOKEN=ghp_your-github-token
GITHUB_OWNER=your-github-username
GITHUB_REPO=your-repo-name
GITHUB_DEFAULT_BRANCH=main
GITHUB_PR_REVIEWERS=reviewer1,reviewer2

# ------------------------------------------------------------
# SLACK (optional — for notifications)
# ------------------------------------------------------------
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=C0XXXXXXXXX
SLACK_NOTIFY_ON_GATE=true
SLACK_NOTIFY_ON_COMPLETE=true

# ------------------------------------------------------------
# PLAYWRIGHT
# ------------------------------------------------------------
BASE_URL=https://your-app.com
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_RETRIES=2
PLAYWRIGHT_WORKERS=4

# ------------------------------------------------------------
# QIA AGENT BEHAVIOUR
# ------------------------------------------------------------
QIA_AUTO_APPROVE_GATES=false
QIA_GATE_TIMEOUT_MINUTES=30
QIA_MAX_HEAL_ATTEMPTS=3
QIA_VISUAL_THRESHOLD=0.1
QIA_FRAMEWORK_SCAN_DEPTH=5

# ------------------------------------------------------------
# ALLURE
# ------------------------------------------------------------
ALLURE_RESULTS_DIR=allure-results
ALLURE_REPORT_DIR=allure-report

# ------------------------------------------------------------
# CI / ENVIRONMENT
# ------------------------------------------------------------
CI=false
NODE_ENV=development
LOG_LEVEL=info
